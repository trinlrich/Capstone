<resources>
    <!-- Base application theme. -->
    <style name="Theme.CapstoneApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:spotShadowAlpha">0.4</item>
    </style>

    <style name="FirebaseTheme" parent="Theme.CapstoneApp">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="CardTheme" >
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">@dimen/larger_margin</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="flow_horizontalAlign">start</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_marginVertical">@dimen/medium_margin</item>
    </style>

    <style name="buttonStyle1" parent="Theme.CapstoneApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/task_button_height</item>
        <item name="android:layout_margin">@dimen/task_button_margin</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="newTaskButton" parent="Theme.CapstoneApp">
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SelectedButton" parent="Theme.CapstoneApp">
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="NotSelectedButton" parent="Theme.CapstoneApp">
        <item name="backgroundTint">@color/accent_blue</item>
    </style>


</resources>
